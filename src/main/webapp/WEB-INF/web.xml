<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">

  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>PostTask</servlet-name>
    <servlet-class>ru.job4j.presentation.PostTask</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PostTask</servlet-name>
    <url-pattern>/postTask.do</url-pattern>
  </servlet-mapping>
    <servlet>
        <servlet-name>GetAllTasks</servlet-name>
        <servlet-class>ru.job4j.presentation.GetAllTasks</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllTasks</servlet-name>
        <url-pattern>/getAllTasks.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>ru.job4j.presentation.DeleteTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/deleteTask.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CompleteTask</servlet-name>
        <servlet-class>ru.job4j.presentation.CompleteTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CompleteTask</servlet-name>
        <url-pattern>/completeTask.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangeTask</servlet-name>
        <servlet-class>ru.job4j.presentation.ChangeTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangeTask</servlet-name>
        <url-pattern>/changeTask.do</url-pattern>
    </servlet-mapping>
</web-app>
